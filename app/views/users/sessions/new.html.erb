<div class="container-xl form-box">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="field">
      <%= f.label :email, class:"form-label d-block" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control d-block" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control d-block" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field d-block">
        <%= f.check_box :remember_me, class:"form-check-input" %>
        <%= f.label :remember_me, class:"form-check-label" %>
      </div>
    <% end %>

    <div class="actions d-block">
      <%= f.submit "Log in", class:"btn btn-outline-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
