
<%= form_with(model: participant) do |form| %>
  <% if participant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(participant.errors.count, "error") %> prohibited this participantion from being saved:</h2>

      <ul>
        <% participant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-outline mb-4">
    <%= form.label 'Provide your level of participation', style: "display: block", class:"form-label" %>
    <%= form.select :participant_status, Participant.participant_statuses.keys, class:"form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= form.check_box :notify, class:"form-check-input" %>
    <%= form.label :notify, class:"form-label" %>
  </div>

  <%= form.hidden_field :event_id, value: @event.id %>

  <div>
    <%= form.submit :Save, class:"btn btn-outline-primary" %>
  </div>
<% end %>