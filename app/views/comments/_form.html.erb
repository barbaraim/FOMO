
<%= form_with(model: comment) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-outline mb-4">
    <%= form.label :review, style: "display: block", class:"form-label" %>
    <%= form.text_area :review, class:"form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= form.label 'Rating: 1 to 5', style: "display: block", class:"form-label" %>
    <%= form.range_field :rating, class:"form-range", in: 1..5 %>
  </div>

  <%= form.hidden_field :commentable_id, value: @comment.commentable_id %>
  <%= form.hidden_field :commentable_type, value: @comment.commentable_type %>

  <div>
    <%= form.submit :Save, class:"btn btn-outline-primary" %>
  </div>
<% end %>